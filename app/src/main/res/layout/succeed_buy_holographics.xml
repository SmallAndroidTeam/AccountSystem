<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/add_succeed_icon"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_centerInParent="true"
        android:src="@mipmap/face_add_succeed" />
    <ImageView
        android:id="@+id/anim"
        android:src="@drawable/finger_true"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="267px"
        />
    <TextView
        android:id="@+id/tv_buy_succeed"
        android:paddingTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="50px"
        android:layout_below="@id/add_succeed_icon"
        android:textColor="@color/white"
        android:text="支付完成 敬请期待"/>
    <TextView
        android:id="@+id/tv_buy_prompt"
        android:paddingTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40px"
        android:layout_below="@id/tv_buy_succeed"
        android:textColor="@color/white"
        android:text="预购的全息影像已支付完成 敬请期待"/>
</RelativeLayout>
