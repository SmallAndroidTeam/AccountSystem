<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170px"
            android:src="@mipmap/icon_back" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="140px"
            android:layout_height="140px"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="400px"
            android:src="@mipmap/icon_delete" />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back1"
                android:paddingTop="20px"
                android:layout_width="350px"
                android:layout_centerHorizontal="true"
                android:layout_height="520px"
                android:src="@mipmap/bg_add" />

            <ImageView
                android:id="@+id/icon_add1"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@mipmap/fingerprint" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="50px"
               android:layout_marginTop="420px"
                android:text="指纹001" />
        </RelativeLayout>

    <ImageView
        android:id="@+id/relation"
        android:layout_width="wrap_content"
        android:padding="30px"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_relation" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/back2"
                android:paddingTop="20px"
                android:layout_width="350px"
                android:layout_centerHorizontal="true"
                android:layout_height="520px"
                android:src="@mipmap/bg_add" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="50px"
                android:layout_marginTop="420px"
                android:text="人脸：001" />

        </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
            <TextView
                android:id="@+id/name"
                android:layout_width="140px"
                android:layout_height="wrap_content"
                android:layout_marginTop="165px"
                android:textSize="45px"
                android:textColor="@color/white"
                android:text="姓名：" />
           <EditText
            android:id="@+id/editname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
               android:layout_marginTop="165px"
           android:layout_toRightOf="@id/name"

            />
            <TextView
                android:id="@+id/fingerprint"
                android:layout_below="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30px"
                android:textSize="45px"
                android:textColor="@color/white"
                android:text="指纹：指纹001" />
            <TextView
                android:id="@+id/face"
                android:layout_below="@+id/fingerprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30px"
                android:textSize="45px"
                android:textColor="@color/white"
                android:text="人脸：人脸001" />
            <of.account.bq.utils.LinearGradientText
                android:id="@+id/correlation"
                android:layout_below="@+id/face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30px"
                android:textSize="45px"
                android:textColor="@color/white"
                android:text="状态：未关联" />

    </RelativeLayout>
</LinearLayout>