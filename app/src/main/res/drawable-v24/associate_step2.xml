    <item android:drawable="@drawable/btn_bg23" android:duration="50"></item>
    <item android:drawable="@drawable/btn_bg24" android:duration="50"></item>
    <item android:drawable="@drawable/btn_bg25" android:duration="50"></item>
    <item android:drawable="@drawable/btn_bg26" android:duration="50"></item>
    <item android:drawable="@drawable/btn_bg28" android:duration="50"></item>
