    xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="true">
    <item android:drawable="@drawable/btn_bg14" android:duration="50"></item>
    <item android:drawable="@drawable/btn_bg15" android:duration="50"></item>
    <item android:drawable="@drawable/btn_bg16" android:duration="50"></item>
    <item android:drawable="@drawable/btn_bg17" android:duration="50"></item>
    <item android:drawable="@drawable/btn_bg18" android:duration="50"></item>
    <item android:drawable="@drawable/btn_bg19" android:duration="50"></item>
    <item android:drawable="@drawable/btn_bg20" android:duration="50"></item>
